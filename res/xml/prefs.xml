<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <ListPreference
        android:defaultValue="en"
        android:entries="@array/languages"
        android:entryValues="@array/tags"
        android:key="language"
        android:summary="@string/languageText"
        android:title="@string/language" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="vibration"
        android:summary="@string/vibrationText"
        android:title="@string/vibration" />

    <Preference
        android:key="versionPref"
        android:summary="@string/updatesVersion"
        android:title="@string/updatesCheck" />

</PreferenceScreen>