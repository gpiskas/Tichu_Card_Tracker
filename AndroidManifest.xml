<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="geo.piskas.apps"
    android:versionCode="4"
    android:versionName="1.5" >

    <uses-sdk android:minSdkVersion="4" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:theme="@style/Theme.Geo"
        android:label="@string/app_name" >
        <activity
            android:name=".MainMenu"
            android:configChanges="locale"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".About"
            android:label="@string/about"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.Dialog" >
        </activity>
        <activity
            android:name=".TabHostCards"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
        </activity>
        <activity
            android:name=".TabStrongCards"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
        </activity>
        <activity
            android:name=".TabWeakCards"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
        </activity>
        <activity
            android:name=".StartingRack"
            android:label="@string/startingRackTitle"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.Dialog" >
        </activity>
        <activity
            android:name=".RemoveCards"
            android:label="@string/removeCardsTitle"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.Dialog" >
        </activity>
        <activity
            android:name=".Prefs"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Geo.NoTitleBar" >
            <intent-filter>
                <action android:name="geo.piskas.apps.PREFS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>